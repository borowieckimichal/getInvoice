{% extends 'base.html.twig' %}

{% block body %}
    <div class="tab-pane active col-md-6">
        <h3>Dodawanie nowej firmy</h3>

        {{ form_start(form) }}

        <div>
            <p class="text-muted text-left">  
                podaj nazwe firmy:
                {{ form_widget(form.name,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>  
        <div>
            <p class="text-muted text-left">  
                podaj ulice:
                {{ form_widget(form.addressStreet,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>    
        <div>
            <p class="text-muted text-left">  
                podaj nr domu:
                {{ form_widget(form.addressLocalNo,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>    
        <div>
            <p class="text-muted text-left">  
                podaj nr lokalu:
                {{ form_widget(form.addressFlatNo,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div> 
        <div>
            <p class="text-muted text-left">  
                podaj kod pocztowy:
                {{ form_widget(form.addressPostalCode,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div> 
        <div>
            <p class="text-muted text-left">  
                podaj miasto:
                {{ form_widget(form.addressCity,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>
        <div>
            <p class="text-muted text-left">  
                podaj e-mail:
                {{ form_widget(form.email,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>
        <div>
            <p class="text-muted text-left">  
                podaj telefon:
                {{ form_widget(form.phone,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div> 
         <div>
            <p class="text-muted text-left">  
                podaj logo firmy (nie więcej niż 2 MB):
                {{ form_widget(form.companyLogo,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>
         <div>
            <p class="text-muted text-left">  
                podaj NIP firmy:
                {{ form_widget(form.nip,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>
         <div>
            <p class="text-muted text-left">  
                podaj nr rachunku bankowego:
                {{ form_widget(form.iban,{ 'attr': {'class': 'form-control top'}}) }}  
            </p>   
        </div>            
        {#{{ form_widget(form) }}#}
        <input type="submit" class="btn btn-default btn-sm" value="dodaj firmę" />
        {{ form_end(form) }}

        
            
        <a class="btn btn-default btn-sm" href="{{ path('company_index') }}">Powrót do listy firm</a>
            
        



    </div>
{% endblock %}
