{% extends 'base.html.twig' %}

{% block body %}
    <div class="tab-pane active col-md-6">
        <h3>Edycja danych twojej firmy</h3>

        {{ form_start(edit_form) }}

        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.name, 'podaj nazwę firmy:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.name,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressStreet, 'podaj ulicę:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressStreet,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressLocalNo, 'podaj nr domu:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressLocalNo,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressFlatNo, 'podaj nr lokalu:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressFlatNo,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressPostalCode, 'podaj kod pocztowy:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressPostalCode,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>     
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressCity, 'podaj miasto:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressCity,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>     
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.email, 'podaj email:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.email,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.phone, 'podaj telefon:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.phone,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {% if company.companyLogo ends with 'b/d' or company.companyLogo is null %}
                    {{ form_label(edit_form.companyLogo, 'podaj logo firmy (nie więciej niż 2 MB):', { 'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(edit_form.companyLogo,{ 'attr': {'class': 'form-control top'}}) }}  
                {% else%}
                    {{ form_label(edit_form.companyLogo, 'podaj logo firmy (nie więciej niż 2 MB):', { 'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(edit_form.companyLogo,{ 'attr': {'class': 'form-control top'}}) }}

                    <a href="{{ asset('uploads/logos/')}}{{company.companyLogo }}"> 
                        <img src="{{ asset('uploads/logos/')}}{{company.companyLogo}}"
                             height="120" width="120">
                    </a>
                {% endif %}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.nip, 'podaj NIP firmy:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.nip,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.iban, 'podaj nr rachunku bankowego:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.iban,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>    

        <input type="submit" class="btn btn-default btn-sm" value="Edytuj dane firmy" />

        <a class="btn btn-default btn-sm" href="{{ path('company_index') }}">Powrót do listy firm</a>
        {{ form_end(edit_form) }}
        <hr>
        {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger btn-sm" value="Usuń dane firmy">
        {{ form_end(delete_form) }}        



    </div>
{% endblock %}
