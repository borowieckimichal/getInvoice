{% extends 'base.html.twig' %}

{% block body %}
    <div class="tab-pane active col-md-6">
        <h3>Edycja danych kontrahenta</h3>

        {{ form_start(edit_form) }}

        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.name, 'podaj nazwę kontrahenta:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.name,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressStreet, 'podaj ulicę i nr lokalu:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressStreet,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>       
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressPostalCode, 'podaj kod pocztowy:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressPostalCode,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div> 
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.addressCity, 'podaj miasto:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.addressCity,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.email, 'podaj email:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.email,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.phone, 'podaj telefon:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.phone,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>
        <div>
            <p class="text-muted text-left">
                {{ form_label(edit_form.nip, 'podaj nip:', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(edit_form.nip,{ 'attr': {'class': 'form-control top'}}) }}
            </p>
        </div>        

        <input type="submit" class="btn btn-default btn-sm" value="Edytuj kontrahenta" />
        <a class="btn btn-default btn-sm" href="{{ path('customer_index') }}">Powrót do listy kontrahentów</a>
      
        {{ form_end(edit_form) }}
        <hr>
        {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger btn-sm" value="Usuń kontrahenta">
        {{ form_end(delete_form) }}         
        
        
        
    </div>
{% endblock %}
