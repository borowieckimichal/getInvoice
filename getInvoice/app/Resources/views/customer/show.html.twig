{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Addressstreet</th>
                <td>{{ customer.addressStreet }}</td>
            </tr>
            <tr>
                <th>Addresslocalno</th>
                <td>{{ customer.addressLocalNo }}</td>
            </tr>
            <tr>
                <th>Addressflatno</th>
                <td>{{ customer.addressFlatNo }}</td>
            </tr>
            <tr>
                <th>Addresspostalcode</th>
                <td>{{ customer.addressPostalCode }}</td>
            </tr>
            <tr>
                <th>Addresscity</th>
                <td>{{ customer.addressCity }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Nip</th>
                <td>{{ customer.nip }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
